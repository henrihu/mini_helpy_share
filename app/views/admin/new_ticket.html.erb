<div class="add-form">
<%= bootstrap_form_for(@topic, url: admin_create_ticket_path) do |f| -%>

  <%= f.alert_message "Please fix the errors below." %>

  <%= f.fields_for @user do |u| %>

    <%= u.email_field :email, autofocus: true %>
    <%= u.text_field :name %>

  <% end %>

  <%#= f.form_group :private, label: { text: t(:should_message_be_private) }, id: 'private-public' do %>
    <%#= f.radio_button :private, true, label: t(:only_support_can_respond), inline: false %>
    <%#= f.radio_button :private, false, label: t(:responses_can_come_from_everyone), inline: false %>
  <%# end %>

  <%#= f.collection_select(:forum_id, Forum.where(private: false).all, :id, :name, label: t(:forum_name)) %>
  <%= f.text_field :name, :size => 40, label: t(:subject) -%>
  <%= text_area :post, :body, :rows => 8, :cols => 60, label: 'Message' -%>
  <%= hidden_field_tag :client_id %>
  <%= attachinary_file_field_tag 'topic[screenshots]', @topic, :screenshots %>

  <!--<label>Tags:</label><br/>-->
  <%#= text_field_tag :tags %>

  <%= f.submit I18n.t :start_discussion, class: 'btn btn-warning' %>
<% end -%>
</div>
